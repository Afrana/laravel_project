{
  "min_severity": "warning",
  "enable_rules": {
    "no_var_dump": true,
    "no_print_r": true,
    "no_die_exit": true,
    "no_eval": true,
    "xss_unescaped_output": true,
    "sqli_string_concat": true,
    "magic_number": true,
    "hardcoded_secret": true
  },
  "severity": {
    "no_var_dump": "warning",
    "no_print_r": "warning",
    "no_die_exit": "critical",
    "no_eval": "critical",
    "xss_unescaped_output": "critical",
    "sqli_string_concat": "critical",
    "magic_number": "info",
    "hardcoded_secret": "warning"
  },
  "path_filters": {
    "only": [],
    "ignore": [
      "vendor/**",
      "storage/**",
      "node_modules/**"
    ]
  },
  "framework": {
    "laravel": true,
    "codeigniter": true
  },
  "comment_cap": 30,
  "group_similar": true
}